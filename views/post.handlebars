<div class="text-center">
    <h2{{name}}>
        </h2>
        <p>{{content}}</p>
        <p>Written by {{user.name}} on {{format_date date_created}}</p>
</div>

{{#if logged_in}}

<form class="new-comment-form" data-blogid={{id}}>
<div class="textArea">
    <textarea id="comment_content" name="comment-body" placeholder="Type comment here..." cols="30" rows="2"></textarea>
</div>
<div class="CommentBtn">
    <button class="button btn btn-success" type="submit">Post Comment</button>
</div>
</form>
{{/if}}

<h2 class="text-center">Comments:</h2>
{{#each comments as |comment|}}
<div class="comment_Content">
    <p class="text-center" "commentText">{{comment.comment_content}}</p>
    <p class="text-center" "commentUser">Created by: {{comment.user.name}} on {{format_date date_created}}.</p>
</div>
{{/each}}

<script src="/js/comments.js"></script>