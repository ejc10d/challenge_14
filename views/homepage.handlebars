{{#each posts as |post| }}
<div class="row mb-4 post" style="margin: 5px; padding: 5px; background-color: lightgrey">
    <div class="col-md-5">
        <h2>
            <a href="/posts/{{post.id}}" class="text-2xl underline text-blue-500">{{post.title}}</a>
        </h2>
        <p> Written by {{post.user.username}} on {{format_date post.date_created}}
        </p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{/each}}