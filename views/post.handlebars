<div class="row mb-4">
    <div class="text-align-left col-md-6 rounded standard">
        <h2 class="text-2xl">{{title}}</h2>
        <p>{{content}}</p>
        <p>Written by {{user.username}} on {{format_date date_created}}</p>
    </div>

    <div class="col-md-5 standard rounded">
        <h2 class="text-center">Comments:</h2>
        {{#each comments as |comment|}}
        <div class="comment_content">
            <p class="p-2 rounded text-center bg-white border" "commentText">{{comment.comment_content}}</p>
            <p class="p-2 text-align-left bg-white border-b-2 border-black" "commentUser">Created by: {{comment.user.username}} on {{format_date
                date_created}}.</p>
        </div>
        {{/each}}
    </div>

    {{#if logged_in}}
    <div class="col-md-12 p-5">
        <form class="new-comment-form rounded standard p-2" data-postid={{id}} data-userid={{id}}>
            <h2 class="text-xl">New Comment</h2>
            <div class="textArea">
                <textarea class="form-control"id="comment_content" name="comment-body" placeholder="Type comment here..."
                    class="ml-5"></textarea>
            </div>
            <div class="CommentBtn">
                <button class="btn btn-primary btn-block mb-2 bg-blue-500 rounded" type="submit">Post Comment</button>
            </div>
        </form>
    </div>
    {{/if}}
</div>


<script src="/js/comment.js"></script>