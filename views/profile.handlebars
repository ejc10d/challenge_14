<div class="row">
    <div class="col-auto">
        <h2 class="text-2xl">Welcome, {{username}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="rounded col-md-9 standard">
        <h3 class="text-xl">New Post</h3>

        <form class="form new-blog-post-form">
            <div class="form-group">
                <label for="blog-title">Blog Post Title:</label>
                <input class="form-control" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                <lable for="blog-content">Content:</lable>
                <textarea class="form-control" id="blog-content" name="blog-content"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block mb-4 bg-blue-500;">Post</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class="col-md-6 post-list">
        <h3 class="text-xl">Active Posts:</h3>

        {{#each posts as |post|}}
        <div class="row mb-2 text-center text-xl text-underline text-blue-500">
            <div class="col-md-6 border-2 border-black">
                <h4 class="m-2"><a href="/posts/{{post.id}}">{{post.title}}</a>
                </h4>
            </div>
            <div class="m-2 col-md-4">
                <button class="btn btn-sm btn-danger" data-id="{{post.id}}">Delete</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/profile.js"></script>